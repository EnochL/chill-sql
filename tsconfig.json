{
    "compilerOptions": {
//        "declaration": true, //打包之后是否生成声明文件
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext"
        ],
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "strictNullChecks": true,
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "**/*.spec.ts"
    ],
    "compileOnSave": false
}
